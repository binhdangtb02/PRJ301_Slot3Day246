<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>StudentTimetableController</servlet-name>
        <servlet-class>controller.student.StudentTimetableController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentReportController</servlet-name>
        <servlet-class>controller.student.StudentReportController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TakeAttendence</servlet-name>
        <servlet-class>controller.lecture.TakeAttendence</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditAttendence</servlet-name>
        <servlet-class>controller.lecture.EditAttendence</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReportController</servlet-name>
        <servlet-class>controller.lecture.ReportController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.auth.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.auth.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TimetableController</servlet-name>
        <servlet-class>controller.lecture.TimetableController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentTimetableController</servlet-name>
        <url-pattern>/student/timetable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentReportController</servlet-name>
        <url-pattern>/student/report</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TakeAttendence</servlet-name>
        <url-pattern>/lecture/takeatt</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditAttendence</servlet-name>
        <url-pattern>/lecture/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReportController</servlet-name>
        <url-pattern>/lecture/report</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/auth/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/auth/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TimetableController</servlet-name>
        <url-pattern>/lecture/timetable</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
